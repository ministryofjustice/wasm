{
    "name": "ministryofjustice/wasm",
    "description": "WordPress AWS Site Manager. Manage MOJ Digital WordPress instances running in AWS.",
    "type": "project",
    "bin": [
        "bin/wasm"
    ],
    "require": {
        "php" : "^7.1",
        "ext-json": "*",
        "symfony/console": "^4.1",
        "aws/aws-sdk-php": "^3.64",
        "symfony/process": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "WpEcs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WpEcs\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "mikey179/vfsStream": "^1.6",
        "psy/psysh": "@stable",
        "squizlabs/php_codesniffer": "^3.3",
        "phpmd/phpmd": "^2.6"
    },
    "scripts": {
      "test": [
          "vendor/bin/phpunit",
          "vendor/bin/phpcs",
          "vendor/bin/phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode"
      ],
      "coverage": "vendor/bin/phpunit --coverage-html coverage --whitelist src"
    }
}
